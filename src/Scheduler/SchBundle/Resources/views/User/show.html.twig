{% extends 'SchedulerBundle::layout.html.twig' %}
{% block title %}Show User{% endblock %}

{% block body %}
  <table class="record_properties table table-bordered table-condensed">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>Username</th>
      <td>{{ entity.username }}</td>
    </tr>
    <tr>
      <th>First Name</th>
      <td>{{ entity.firstname }}</td>
    </tr>
    <tr>
      <th>Last Name</th>
      <td>{{ entity.lastname }}</td>
    </tr>
    {#
    <tr>
      <th>Email1</th>
      <td>{{ entity.email1 }}</td>
    </tr>
    <tr>
      <th>Email2</th>
      <td>{{ entity.email2 }}</td>
    </tr>
    <tr>
      <th>Tel_home</th>
      <td>{{ entity.telhome }}</td>
    </tr>
    <tr>
      <th>Tel_work</th>
      <td>{{ entity.telwork }}</td>
    </tr>
    #}
    </tbody>
  </table>

  <ul class="record_actions">
    <li>
      <a href="{{ path('user') }}">
        Back to the list
      </a>
    </li>
    <li>
      <a href="{{ path('user_edit', { 'id': entity.id }) }}">
        Edit
      </a>
    </li>
    <li>
      <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
      </form>
    </li>
  </ul>
{% endblock %}
