<h1>Region</h1>

<table class="record_properties table table-condensed">
  <tbody>
  <tr>
    <th>Id</th>
    <td>{{ entity.id }}</td>
  </tr>
  <tr>
    <th>Name</th>
    <td>{{ entity.name }}</td>
  </tr>
  <tr>
    <th>Long Name</th>
    <td>{{ entity.longname }}</td>
  </tr>
  </tbody>
</table>

<ul class="record_actions">
  <li>
    <a href="{{ path('region') }}">
      Back to the list
    </a>
  </li>
  <li>
    <a href="{{ path('region_edit', { 'id': entity.id }) }}">
      Edit
    </a>
  </li>
  <li>
    <form action="{{ path('region_delete', { 'id': entity.id }) }}" method="post">
      {{ form_widget(delete_form) }}
      <button type="submit">Delete</button>
    </form>
  </li>
</ul>
