{% extends 'SchedulerBundle::layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
  <h1>{{ title }}</h1>

  <table class="records_list table table-hover table-condensed">
    <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
      <tr>
        <td><a href="{{ path('mobileprovider_show', { 'id': entity.id }) }}"><img src="{{ asset('assets/img/information-white.png') }}"></a>
          <a href="{{ path('mobileprovider_edit', { 'id': entity.id }) }}"><img src="{{ asset('assets/img/report--pencil.png') }}"></a></td>
        <td>{{ entity.name }}</td>
        <td>{{ entity.email }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <p><a href="{{ path('mobileprovider_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> Create</a></p>

{% endblock %}
