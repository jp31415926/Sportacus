{% extends 'SchedulerBundle::layout.html.twig' %}
{% set title='Show RefPntsMap' %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
<h1>{{ title }}</h1>

<table class="records_list table table-hover table-condensed">
  <tbody>
  <tr>
    <th>Id</th>
    <td>{{ entity.id }}</td>
  </tr>
  <tr>
    <th>User</th>
    <td>{{ entity.user }}</td>
  </tr>
  <tr>
    <th>Team</th>
    <td>{{ entity.team }}</td>
  </tr>
  <tr>
    <th>Priority</th>
    <td>{{ entity.priority }}</td>
  </tr>
  <tr>
    <th>Project</th>
    <td>{{ entity.project }}</td>
  </tr>
  </tbody>
</table>

<br/>
{% if is_granted("ROLE_SCHEDULER") %}
  <p><a href="{{ path('refpntsmap_edit', { 'id': entity.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Edit</a></p>
  <p><a href="{{ path('refpntsmap_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> New</a></p>
  {#<p><a href="{{ path('refspntsmap_clone', { 'id': entity.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-retweet"></i> Clone</a>#}
  {{ form_start(delete_form, {'action': path('refpntsmap_delete', { 'id': entity.id })}) }}
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger" 
            onclick="return confirm('Are you sure you want to delete this RefPntsMap?');">Delete
    </button>
  {{ form_end(delete_form) }}
  </p>
{% endif %}
<p><a href="{{ path('refpntsmap') }}" class="btn btn-default"><i class="glyphicon glyphicon-backward"></i> List</a></p>

{% endblock %}
