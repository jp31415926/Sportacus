{% extends 'SchedulerBundle::layout.html.twig' %}
{% block title %}Show AgeGroup{% endblock %}

{% block body %}

  <table class="record_properties table table-condensed">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ entity.name }}</td>
    </tr>
    <tr>
      <th>Difficulty</th>
      <td>{{ entity.difficulty }}</td>
    </tr>
    </tbody>
  </table>

  {% if is_granted("ROLE_ADMIN") %}
    <p><a href="{{ path('agegroup_edit', { 'id': entity.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Edit</a></p>
    <p><a href="{{ path('agegroup_new') }}" class="btn btn-default"><i class="glyphicon glyphicon-plus"></i> New</a></p>
{#    <p><a href="{{ path('agegroup_clone', { 'id': entity.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-retweet"></i> Clone</a> #}
    </p>
  {{ form_start(delete_form, {'action': path('agegroup_delete', { 'id': entity.id })}) }}
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger" 
            onclick="return confirm('Are you sure you want to delete this Age Group?');">Delete
    </button>
  {{ form_end(delete_form) }}
  {% endif %}
  <p><a href="{{ path('agegroup') }}" class="btn btn-default"><i class="glyphicon glyphicon-backward"></i> List</a></p>
  
{% endblock %}
