{% extends 'SchedulerBundle::layout.html.twig' %}
{% block title %}Login{% endblock %}

{% block body %}
  {% if error %}
    <div class="contact-notice">{{ error.message }}</div>
  {% endif %}

  {% if app.session.hasFlash('contact-notice') %}
    <div class="contact-notice">
      {{ app.session.flash('contact-notice') }}
    </div>
  {% endif %}

  <form action="{{ path('login_check') }}" method="post" class="contact">
    <div><label for="username" class="required">Username:</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" class="required"/></div>

    <div><label for="password" class="required">Password:</label>
      <input type="password" id="password" name="_password" class="required"/></div>

    <div><input type="checkbox" id="remember_me" name="_remember_me" checked />
      <label for="remember_me">Keep me logged in</label></div>

    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <input type="submit" value="Login"/>
  </form>
{% endblock %}
